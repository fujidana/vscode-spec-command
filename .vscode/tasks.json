// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"dependsOn": [
				"npm: watch:peggy",
				"npm: watch:webpack"
			],
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch:peggy",
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"owner": "external",
				"fileLocation": "autoDetect",
				"source": "peggy-language",
				"applyTo": "closedDocuments",
				"pattern": [
					{
						"regexp": "^(Error|error|warning|info)\\S*: (.*)$",
						"severity": 1,
						"message": 2
					},
					{
						"regexp": "^ --> ([^:]+):(\\d+):(\\d+)$",
						"file": 1,
						"line": 2,
						"column": 3
					}
				],
				"background": {
					"activeOnStart": false,
					"beginsPattern": {
						"regexp": "^\"(.+)\" changed...$",
						"file": 1
					},
					"endsPattern": "^(Wrote|Failed writing): (\".+\")$"
				}
			},
			"label": "npm: watch:peggy",
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			}
		},
		{
			"type": "npm",
			"script": "watch:webpack",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$ts-webpack-watch",
				"$tslint-webpack-watch"
			],
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		}
	]
}